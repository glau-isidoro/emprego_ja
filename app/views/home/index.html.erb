<% @jobs.each do |job| %>
  <dl>
    <dt><h1><%= link_to job.title, job %></h1></dt>
    <dt>Empresa:</dt>
    <dd><%= job.company.name %></dd>
    <dt>Localização:</dt>
    <dd><%= job.location %></dd>
  </dl>
  <% if job.featured? %>
    <dd><strong> Vaga em Destaque </strong><dd>
  <% end %>
<% end %>
